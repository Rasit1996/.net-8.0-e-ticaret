
@{
    ViewData["Title"] = "ReceivedMessage";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
@using EntityLayer.Entity
@model List<Message>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Mesajlar</h4>
            @if(Model.Count>0){
            <table class="table table-striped">
                <thead>
                    <tr>

                        <th> # </th>

                        
                        <th>İsim </th>
                        <th>Konu</th>
                       
                       
                        <th>Sil</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>

                            <td>@count</td>

                            <td>@item.SendUser.UserName </td>
                            <td>@item.Subject</td>
                           
                            
                            <td><a href="#" class="btn btn-danger sil" data-itemid="@item.ID">Sil</a></td>
                            <td><a href="/Admin/Message/ReceivedMessageDetail/@item.ID" class="btn btn-warning">Detaylar</a></td>
                        </tr>
                    }


                </tbody>
            </table>

                <br />
            }
            else
            {
                <h3>Gelen kutunuz boş!</h3>
            }
      

        </div>
    </div>
</div>

