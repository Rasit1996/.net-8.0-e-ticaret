
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
@using EntityLayer.Entity
@model List<urun>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürünler Tablosu</h4>

            <table class="table table-striped">
                <thead>
                    <tr>

                        <th> # </th>

                        
                        <th>İsim </th>
                        <th>Açıklama</th>
                        <th>Stok</th>
                        <th>Fiyat</th>
                        <th>İndirim</th>
                        <th>Kategori</th>
                        <th>Özellikler</th>
                        <th>Resimler</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count += 1;
                        <tr>

                            <td>@count</td>

                            
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Stock</td>
                            <td>@item.Price</td>
                            <td>@item.Discount</td>
                            <td>@item.category.Name </td>
                            <td><a href="/Admin/Product/Features/@item.ID" class="btn btn-gradient-primary btn-fw">Özellikleri gör</a></td>
                            <td><a href="/Admin/Product/Image/@item.ID" class="btn btn-gradient-primary btn-fw">Resimleri gör</a></td>
                            <td><a href="#" class="btn btn-danger sil"  onclick="Sil(@item.ID)">Sil</a></td>
                            <td><a href="/Admin/Product/update/@item.ID" class="btn btn-warning">Güncelle</a></td>
                        </tr>
                    }


                </tbody>
            </table>
            <br />
            <a class="btn btn-info" href="/Admin/Product/add">Ürün Ekle</a>
        </div>
    </div>
</div>

@section script
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function Sil(id) {
           
            Swal.fire({
                title: "Silmek istediğinize emin misiniz?",
                text: "Bu işlem geri alınamaz!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                cancelButtonText: "İptal",
                confirmButtonText: "Evet, sil!"
            }).then((result) => {
                if (result.isConfirmed) {
                    var ID = id;
                    $.ajax({
                        type: "POST",
                        url: "/Admin/Product/delete/" + ID,
                        success: function () {

                            Swal.fire({
                                title: "Silindi!",
                                text: "Dosyanız başarıyla silindi.",
                                icon: "success",
                                confirmButtonText: "Tamam"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.reload();
                                }
                            });
                        },
                        error: function () {
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: "Bir şeyler ters gitti!",
                                confirmButtonText: "Tamam"
                                // footer: '<a href="#">Why do I have this issue?</a>'
                            });
                        }
                    });

                }
            });
        }
    </script>
}

