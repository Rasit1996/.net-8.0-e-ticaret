
@{
    Layout = null;
}
@using e_ticaret.Models
@model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/writer/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/writer/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="/writer/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/writer/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="/writer/assets/images/logo.svg">
                            </div>
                            <h4>Merhaba! Yönetici paneli girişine hoşgeldiniz</h4>
                            <h6 class="font-weight-light">Devam etmek için oturum açın.</h6>
                            <form class="pt-3" action="/Admin/Login/Index" method="post">
                                <div class="form-group">
                                    <input type="email" name="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                    @Html.ValidationMessageFor(x=>x.email,"",new {@class="text-danger"})
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre">
                                    @Html.ValidationMessageFor(x => x.password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="token" id="exampleInputPassword1" placeholder="Token">
                                </div>
                                <div class="mt-3">
                                    <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="/Admin/Login/Token">Yeni Bir Token Al</a>
                                </div>
                                @if(ViewBag.hata!=null)
                                {
                                    <span class="text-danger">@ViewBag.Hata</span>
                                }

                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Giriş Yap</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">Oturumumu açık tut
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Şifrenizi mi unuttunuz?</a>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/writer/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/writer/assets/js/off-canvas.js"></script>
    <script src="/writer/assets/js/hoverable-collapse.js"></script>
    <script src="/writer/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>