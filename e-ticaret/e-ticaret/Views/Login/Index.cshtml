
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["section"] = "class=";
}
@using e_ticaret.Models
@model LoginViewModel

<div class="container">
    
    <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
       
@*     <div class="row align-content-center" style="position: relative; height: 750.6px;"> *@
            <div class="login p-5 bg-light mx-auto mw-100">
                
            <h3 class="title">Giriş Sayfası</h3>
            <br />
        <form method="post" action="/Login/Index">
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" asp-for="email" type="email" />
                <span asp-validation-for="email" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <input class="form-control" name="password" type="password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
                @if (ViewBag.hata != null)
                {
                    <span class="text-danger">@ViewBag.hata</span>
                    <br />
                }
            <button type="submit" class="btn btn-success">Giriş Yap</button>
        </form>
        <br />
        <a href="#">Şifremi Unuttum</a>
          <br />
          <a href="/Register/">Henüz kayıt olmadınız mı?</a>
            </div>
  
    </div>
</div>

