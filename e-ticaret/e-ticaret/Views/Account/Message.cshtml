
@{
    ViewData["Title"] = "Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["section"] = "class=";
}

@using EntityLayer.Entity
@model List<Message>
@{
    int count = 0;
}

<section class="bg0 p-t-62 p-b-60">
    <div class="container">
        <div class="row">
            @await Html.PartialAsync("sideMenu")
            
            <div class="col-md-12 col-lg-9 p-b-80">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gelen Mesajlar</h4>
                        @if (Model.Count > 0)
                        {
                            <table class="table table-striped">
                                <thead>
                                    <tr>

                                        <th> # </th>


                                        <th>İsim </th>
                                        <th>Konu</th>


                                        <th>Sil</th>
                                        <th>Detaylar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count += 1;
                                        <tr>

                                            <td>@count</td>

                                            <td>Admin </td>
                                            <td>@item.Subject</td>


                                            <td><a href="#" class="btn btn-danger sil" data-itemid="@item.ID">Sil</a></td>
                                            <td><a href="/Account/MessageDetail/@item.ID" class="btn btn-warning">Detaylar</a></td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                            <br />
                        }
                        else
                        {
                            <h3>Gelen kutunuz boş!</h3>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






